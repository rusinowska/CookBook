{% extends 'layout.html.twig' %}

{% block title %}
    {% if page_title_param is defined %}{{ page_title|trans(page_title_param) }}{% else %}{{ page_title|trans }}{% endif %}
{% endblock %}

{% block body %}


    <div class="card mdc-card-form my-card is-center ">

        <h3 class="mdc-typography--headline4">
            {% if page_title_param is defined %}{{ page_title|trans(page_title_param) }}{% else %}{{ page_title|trans }}{% endif %}
        </h3>

        {{ form_start(form, { method: attr.method|default('post'), action: attr.action }) }}
        {% if false == form.vars.valid %}
            {% include 'default/_single_flash_message.html.twig' with {
                type: 'danger',
                message: 'message.form_error',
            }%}
        {% endif %}
        <div class="">

        {{ form_widget(form) }}
        </div>

        <div class="row">

            <input type="submit" id="_submit" name="_submit" value="{{ submit_label|default('action.save'|trans) }}" class="mdc-button mdc-button--raised right" />
        </div>

    </div>

    {% if back_to_homepage|default(false) %}

        <div class="row content-center">
            <a href="{{ path(back_to_homepage) }}" class="mdc-button mdc-button-back is-center">
                <i class="material-icons">
                    arrow_back
                </i>
                {{ 'action.back_to_homepage'|trans }}

            </a>
        </div>

    {% endif %}

    {{ form_end(form) }}

{% endblock %}