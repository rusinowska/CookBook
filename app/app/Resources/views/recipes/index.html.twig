{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.recipes'|trans }}
{% endblock %}

{% block body %}

    <div class="row">
        <div class="col s6">
            <h1 class="mdc-typography--headline4">{{ 'title.recipes'|trans }}</h1>
        </div>
        <div class="col s6 nav-actions-list">
            <a href="{{ path('recipes_add') }}" class="mdc-button mdc-button--raised right">
                <i class="material-icons mdc-button__icon" aria-hidden="true">add</i>
                add new
            </a>
        </div>
    </div>



    {% if recipes is defined and recipes|length %}

        <div class="mdc-grid-list">
            <ul class="mdc-grid-list__tiles">
                {% for item in recipes %}
                    <li class="mdc-grid-tile">
                        <div class="mdc-card">

                            {% for photo in item.getPhotos() %}
                                <div class="mdc-card__media my-card__media mdc-card__media mdc-card__media--16-9" style="background-image: url({{   asset('uploads/photos/' ~ photo.photo) }});"></div>
                                {% endfor %}

                            <div class="cb-card__primary">
                                <div class="cb__title mdc-typography--headline6">{{ item.title }}</div>
                            </div>

                            <div class="cb-card__secondary">
                                <div class="mdc-typography--body2">{{ item.description|slice(0, 100) }}...</div>
                                <div class="mdc-chip-set">
                                    {#{% for key, value in item.ingredients %}#}
                                    {#<div class="mdc-chip" tabindex="0">#}
                                        {#<div class="mdc-chip__text">{{ key }}</div>#}
                                    {#</div>#}
                                    {#{% endfor %}#}
                                </div>
                                 {#{% for key, value in item.category %}#}
                                {#<div class="mdc-typography--body2">{{ value }}</div>#}
                                     {#{% endfor %}#}
                            </div>

                            <div class="mdc-card__actions">
                                <div class="mdc-card__action-buttons">
                                    <a href="{{ path('recipes_view', {'id': item.id}) }}" class="mdc-button mdc-card__action mdc-card__action--button">View</a>
                                </div>
                                <div class="mdc-card__action-icons">
                                    <i class="material-icons mdc-card__action mdc-card__action--icon" tabindex="0" role="button" title="Share">share</i>
                                </div>
                            </div>
                        </div>
                   </li>
                {% endfor %}
            </ul>
        </div>

        <div class="navigation text-center">
            {{ pagerfanta(recipes, 'twitter_bootstrap3_translated', { routeName: ('recipes_index_paginated') }) }}
        </div>

        <button class="mdc-button">
            <i class="material-icons mdc-button__icon" aria-hidden="true">favorite</i>
            Button
        </button>

    {% else %}
        <p>
            {{ 'message.empty_list'|trans }}
        </p>
    {% endif %}

{% endblock %}