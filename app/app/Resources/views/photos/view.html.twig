{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.photo_view'|trans }}
{% endblock %}

{% block body %}


    {% if photo is defined and photo|length %}

        <div class="recipe-box">

            <div class="row">
                <div class="col s6">
                    <h1 class="mdc-typography--headline4">{{ photo.name }}</h1>
                </div>
                {% if is_granted('ROLE_SUPER_ADMIN') %}
                    <div class="col s6 nav-actions-list right">
                        <a href="{{ path('photos_edit', {'id': photo.id}) }}" class="mdc-button right" title="{{ 'action.edit'|trans }}">
                            {{ 'action.edit'|trans }}
                        </a>
                        <a href="{{ path('photos_delete', {'id': photo.id}) }}" class="mdc-button right" title="{{ 'action.delete'|trans }}">
                            {{ 'action.delete'|trans }}
                        </a>
                    </div>
                {% endif %}
            </div>

            <img class="materialboxed center" style="max-width: 100%;" src="{{  asset('uploads/photos/' ~ photo.photo) }}">


        </div>



    {% else %}
        <p>
            {{ 'message.empty_list'|trans }}
        </p>
    {% endif %}

{% endblock %}
