{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.users'|trans }}
{% endblock %}

{% block body %}


    <div class="row">
        <div class="col s6">
            <h1 class="mdc-typography--headline4">{{ 'title.users'|trans }}</h1>
        </div>
        {#<div class="col s6 nav-actions-list">#}
            {#<a href="{{ path('user_add') }}" class="mdc-button mdc-button--raised right">#}
                {#<i class="material-icons mdc-button__icon" aria-hidden="true">add</i>#}
                {#add new#}
            {#</a>#}
        {#</div>#}
    </div>

    {% if users is defined and users|length %}
        <hr class="mdc-list-divider">
        <ul class="mdc-list">
            {% for item in users %}
                <li class="mdc-list-item">

                    <div class="mdc-chip__text">{{ item.username }}</div>

                    <div class="mdc-list-item__meta" role="group" aria-label="{{ 'label.actions'|trans }}">
                        <a href="{{ path('users_view', {'id': item.id}) }}" class="mdc-button" title="{{ 'action.view'|trans }}">
                            {{ 'action.view'|trans }}
                        </a>
                        <a href="{{ path('users_view', {'id': item.id}) }}" class="mdc-button" title="{{ 'action.delete'|trans }}">
                            {{ 'action.delete'|trans }}
                        </a>
                    </div>
                </li>
            {% endfor %}
        </ul>
        <hr class="mdc-list-divider">

        {#<div class="navigation text-center">#}
            {#{{ pagerfanta(categories, 'twitter_bootstrap3_translated', { routeName: ('recipes_index_paginated') }) }}#}
        {#</div>#}


    {% else %}
        <p>
            {{ 'message.empty_list'|trans }}
        </p>
    {% endif %}
{% endblock %}
