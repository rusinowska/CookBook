{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.user_view'|trans }}
{% endblock %}

{% block body %}

    {% if user is defined and user|length %}

    <h1 class="sr-only">{{ 'title.user_view'|trans }}</h1>

    <div>

        <div class="row">
            <div class="col s6">
                <h1 class="mdc-typography--headline5"><i class="material-icons">person</i>{{ user.username }}</h1>
            </div>
            <div class="col s6 nav-actions-list right">
                <a href="{{ path('users_delete', {'id': user.id}) }}" class="mdc-button right" title="{{ 'action.delete'|trans }}">
                    {{ 'action.delete'|trans }}
                </a>
                <a href="{{ path('users_promote', {'id': user.id}) }}" class="mdc-button right" title="{{ 'action.promote'|trans }}">
                    {{ 'action.promote'|trans }}
                </a>
                <a href="{{ path('users_demote', {'id': user.id}) }}" class="mdc-button right" title="{{ 'action.demote'|trans }}">
                    {{ 'action.demote'|trans }}
                </a>
            </div>
        </div>

        <hr class="mdc-list-divider">
        <ul class="mdc-list mdc-list--two-line">
                <li class="mdc-list-item">

                    <div class="mdc-list-item__text">
                        <span class="mdc-list-item__primary-text">{{ user.id }}</span>
                        <span class="mdc-list-item__secondary-text">id</span>
                    </div>
                </li>
                <li class="mdc-list-item">
                    <div class="mdc-list-item__text">
                        <span class="mdc-list-item__primary-text">{{ user.username }}</span>
                        <span class="mdc-list-item__secondary-text">username</span>
                    </div>
                </li>
                <li class="mdc-list-item">
                    <div class="mdc-list-item__text">
                        <span class="mdc-list-item__primary-text">{{ user.email }}</span>
                        <span class="mdc-list-item__secondary-text">mail</span>
                    </div>

                </li>


        </ul>


    </div>

    {% else %}
        <p>
            {{ 'message.empty_list'|trans }}
        </p>
    {% endif %}


{% endblock %}
